background yes
use_xft yes
xftfont ttf-ubuntu-font-family:size=7
xftalpha 0.8
update_interval 3.0
total_run_times 0
own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 240 5
maximum_width 240
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders no
default_color white
default_shade_color black
default_outline_color black
alignment top_right
gap_x 12
gap_y 48
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale yes
use_spacer none

TEXT
${font ttf-ubuntu-font-family:style=Bold:pixelsize=12}SYSTEM${font} ${hr 1}
Kernel: $alignr$kernel
Uptime: $alignr$uptime
CPU0: ${alignr}${freq}MHz / ${platform coretemp.0 temp 2}C
CPU1: ${alignr}${freq}MHz / ${platform coretemp.0 temp 3}C
CPU2: ${alignr}${freq}MHz / ${platform coretemp.0 temp 4}C
CPU3: ${alignr}${freq}MHz / ${platform coretemp.0 temp 5}C

CPU0$alignr ${cpu cpu0}%
${cpubar cpu0}
CPU1${alignr}${cpu cpu1}%
${cpubar cpu1}
CPU2${alignr}${cpu cpu2}%
${cpubar cpu2}
CPU3${alignr}${cpu cpu3}%
${cpubar cpu3}
Ram ${alignr}$mem / $memmax ($memperc%)
${membar 4}
swap ${alignr}$swap / $swapmax ($swapperc%)
${swapbar 4}
Highest CPU $alignr CPU% MEM%
${top name 1}$alignr${top cpu 1}${top mem 1}
${top name 2}$alignr${top cpu 2}${top mem 2}
${top name 3}$alignr${top cpu 3}${top mem 3}

Highest MEM $alignr CPU% MEM%
${top_mem name 1}$alignr${top_mem cpu 1}${top_mem mem 1}
${top_mem name 2}$alignr${top_mem cpu 2}${top_mem mem 2}
${top_mem name 3}$alignr${top_mem cpu 3}${top_mem mem 3}

${font ttf-ubuntu-font-family:style=Bold:pixelsize=12}FILESYSTEM${font} ${hr 1}
Root: ${alignr}${fs_free /} / ${fs_size /}
${fs_bar 4 /}
Home: ${alignr}${fs_free /home} / ${fs_size /home}
${fs_bar 4 /home}

${font ttf-ubuntu-font-family:style=Bold:pixelsize=12}NETWORK eth0 ${alignr} ${addr eth0}
Down ${downspeed eth0} k/s ${alignr}Up ${upspeed eth0} k/s
Total ${totaldown eth0} ${alignr}Total ${totalup eth0}

${font ttf-ubuntu-font-family:style=Bold:pixelsize=12}NETWORK wlan0 ${alignr} ${addr wlan0}
Down ${downspeed wlan0}k/s ${alignr}Up ${upspeed wlan0} k/s
Total ${totaldown wlan0} ${alignr}Total ${totalup wlan0}

